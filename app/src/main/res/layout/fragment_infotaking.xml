<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="30dp"
    android:layout_marginTop="30dp"
    tools:context=".view.fragment.InfotakingFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_marginBottom="25dp"
            android:text="Please enter your adress information before payment. "/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/myVeryLight"
            android:elevation="0dp"
            android:outlineAmbientShadowColor="@null"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/etAdressName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:hint="Enter Your Name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingVertical="15dp"
                android:textColorHint="#4D000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/myVeryLight"
            android:elevation="0dp"
            android:outlineAmbientShadowColor="@null"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/etAdressCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:hint="Enter Your City"
                android:inputType="text"
                android:maxLines="1"
                android:paddingVertical="15dp"
                android:textColorHint="#4D000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/myVeryLight"
            android:elevation="0dp"
            android:outlineAmbientShadowColor="@null"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/etAdressInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@null"
                android:hint="Enter Your Adress"
                android:inputType="text"
                android:paddingVertical="15dp"
                android:textColorHint="#4D000000"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/myVeryLight"
                android:elevation="0dp"
                android:outlineAmbientShadowColor="@null"
                app:cardCornerRadius="20dp">

                <EditText
                    android:id="@+id/etAdressZIP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:hint="ZIP"
                    android:inputType="number"
                    android:paddingVertical="15dp"
                    android:textColorHint="#4D000000"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/myVeryLight"
                android:elevation="0dp"
                android:outlineAmbientShadowColor="@null"
                app:cardCornerRadius="20dp">

                <EditText
                    android:id="@+id/etAdressPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:hint="Phone"
                    android:inputType="number"
                    android:paddingVertical="15dp"
                    android:textColorHint="#4D000000"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/goToBuyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:cardBackgroundColor="@color/myOrange"
                app:cardCornerRadius="20dp"
                android:onClick="goToBuyClicked"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="20dp"
                    android:text="Save and Continue"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>