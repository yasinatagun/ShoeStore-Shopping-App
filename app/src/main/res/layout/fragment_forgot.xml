<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.ForgotFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/myOrange"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="156dp"
                android:layout_height="148dp"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:src="@drawable/shoe_logo" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#FFFFFF"
                android:elevation="0dp"
                android:outlineAmbientShadowColor="@null"
                app:cardCornerRadius="10dp">

                <EditText
                    android:id="@+id/etResetEmail"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:hint="Enter Your Email"
                    android:paddingVertical="15dp"
                    android:textColorHint="#4D000000"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bResetPassword"
                    android:onClick="resetPasswordClicked"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:backgroundTint="@color/white"
                    android:paddingVertical="15dp"
                    android:text="RESET PASS"

                    android:textColor="@color/myBlack"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bBackLogin"
                    android:onClick="goLoginFragment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:backgroundTint="@color/myLogoColor"
                    android:paddingVertical="15dp"
                    android:text="LOGIN PAGE"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</FrameLayout>